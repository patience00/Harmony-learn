<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Image
        ohos:id="$+id:girlList"
        ohos:height="300vp"
        ohos:width="150vp"
        ohos:image_src="$media:girl1"
        />

    <Text
        ohos:id="$+id:girlName"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:text="姓名:如花"
        ohos:text_size="20vp"
        />

    <Text
        ohos:id="$+id:girlAge"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:text="年龄:17"
        ohos:text_size="20vp"
        />

    <Button
        ohos:id="$+id:nextGirl"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:background_element="#92d050"
        ohos:text="下一个"
        ohos:text_color="#fff"
        ohos:text_size="20vp"
        />

    <Button
        ohos:id="$+id:alert"
        ohos:height="40vp"
        ohos:width="150vp"
        ohos:background_element="#66a1ff"
        ohos:text="点我"
        ohos:text_size="40vp"
        ohos:top_margin="10vp"
        />

</DirectionalLayout>